<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:padding="10dp"
           android:layout_height="match_parent">
           <TextView
               android:id="@+id/todaysDateTvInfo"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/today_s_date"
               android:textSize="@dimen/twenty"
               android:textColor="#4074F8"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               />
           <RelativeLayout
               android:id="@+id/todayDateRl"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:background="@drawable/common_corner"
               android:layout_marginTop="5dp"
               app:layout_constraintTop_toBottomOf="@+id/todaysDateTvInfo">
                <TextView
                    android:id="@+id/todayDateTv"
                    android:layout_width="wrap_content"
                    android:textSize="25sp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    />
               <ImageView
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:padding="10dp"
                   android:layout_alignParentEnd="true"
                   android:layout_centerVertical="true"
                   android:src="@drawable/ic_calendar"
                   android:layout_alignParentRight="true" />
           </RelativeLayout>

           <TextView
               android:id="@+id/dobInfo"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/date_of_birth"
               android:textSize="@dimen/twenty"
               android:textColor="#4074F8"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/todayDateRl"
               android:layout_marginTop="15dp"
               />
           <RelativeLayout
               android:id="@+id/dobRl"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:background="@drawable/common_corner"
               android:layout_marginTop="5dp"
               app:layout_constraintTop_toBottomOf="@+id/dobInfo">
               <TextView
                   android:id="@+id/dobDateTv"
                   android:layout_width="wrap_content"
                   android:textSize="25sp"
                   android:hint="Choose Your DOB"
                   android:textColorHint="#FFFF"
                   android:textColor="@color/white"
                   android:layout_marginLeft="10dp"
                   android:layout_centerVertical="true"
                   android:layout_height="wrap_content"
                   />
               <ImageView
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:padding="10dp"
                   android:layout_alignParentEnd="true"
                   android:layout_centerVertical="true"
                   android:src="@drawable/ic_calendar"
                   android:layout_alignParentRight="true" />
           </RelativeLayout>
           <Button
               android:id="@+id/calculateBtn"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:text="Calculate"
               android:layout_marginTop="20dp"
               android:backgroundTint="#1AD313"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/dobRl"
               app:layout_constraintEnd_toStartOf="@+id/clearBtn"
               android:layout_marginRight="10dp"
               />
           <Button
               android:id="@+id/clearBtn"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:text="Clear"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="20dp"
               android:backgroundTint="#1AD313"
               app:layout_constraintTop_toBottomOf="@+id/dobRl"
               app:layout_constraintStart_toEndOf="@+id/calculateBtn"
               app:layout_constraintEnd_toEndOf="parent"
               />
           <RelativeLayout
               android:id="@+id/resultRl"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:visibility="gone"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginTop="20dp"
               app:layout_constraintTop_toBottomOf="@+id/clearBtn">
               <TextView
                   android:id="@+id/ageInfo"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Age"
                   android:textSize="@dimen/twenty"
                   android:textColor="#1AD313"/>
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:id="@+id/ageConstraint"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="15dp"
                   android:layout_marginTop="10dp"
                   android:layout_below="@+id/ageInfo"
                   android:background="@drawable/common_corner">
                   <RelativeLayout
                       android:id="@+id/yearsRl"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintEnd_toStartOf="@+id/monthsRl"
                        app:layout_constraintTop_toTopOf="parent"
                       >
                       <TextView
                           android:id="@+id/yearsTvInfo"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Years"
                           android:textSize="@dimen/twenty"
                           android:layout_centerHorizontal="true"
                           android:textColor="#1AD313"/>
                       <TextView
                           android:id="@+id/yearsTv"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="30"
                           android:layout_below="@+id/yearsTvInfo"
                           android:textSize="@dimen/twenty"
                           android:layout_centerHorizontal="true"
                           android:textColor="#FFF"/>
                   </RelativeLayout>

                   <RelativeLayout
                       android:id="@+id/monthsRl"
                       android:layout_width="0dp"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintStart_toEndOf="@+id/yearsRl"
                       app:layout_constraintEnd_toStartOf="@+id/daysRl"
                       android:layout_height="wrap_content">
                       <TextView
                           android:id="@+id/monthsTvInfo"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Months"
                           android:textSize="@dimen/twenty"
                           android:layout_centerHorizontal="true"
                           android:textColor="#1AD313"/>
                       <TextView
                           android:id="@+id/monthsTv"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="30"
                           android:layout_below="@+id/monthsTvInfo"
                           android:textSize="@dimen/twenty"
                           android:layout_centerHorizontal="true"
                           android:textColor="#FFF"/>
                   </RelativeLayout>

                   <RelativeLayout
                       android:id="@+id/daysRl"
                       android:layout_width="0dp"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintStart_toEndOf="@+id/monthsRl"
                       app:layout_constraintEnd_toEndOf="parent"
                       android:layout_height="wrap_content">
                       <TextView
                           android:id="@+id/daysTvInfo"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Days"
                           android:layout_centerHorizontal="true"
                           android:textSize="@dimen/twenty"
                           android:textColor="#1AD313"/>
                       <TextView
                           android:id="@+id/daysTv"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="30"
                           android:layout_centerHorizontal="true"
                           android:layout_below="@+id/daysTvInfo"
                           android:textSize="@dimen/twenty"
                           android:textColor="#FFF"/>
                   </RelativeLayout>
               </androidx.constraintlayout.widget.ConstraintLayout>


               <TextView
                   android:id="@+id/nextBirthInfo"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Next Birthday"
                   android:layout_marginTop="20dp"
                   android:textSize="@dimen/twenty"
                   android:layout_below="@+id/ageConstraint"
                   android:textColor="#1AD313"/>
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="15dp"
                   android:layout_marginTop="10dp"
                   android:layout_below="@+id/nextBirthInfo"
                   android:background="@drawable/common_corner">

                   <RelativeLayout
                       android:id="@+id/nextMonthsRl"
                       android:layout_width="0dp"
                       app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintEnd_toStartOf="@+id/nextDaysRl"
                       android:layout_height="wrap_content">
                       <TextView
                           android:id="@+id/nextMonthsTvInfo"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Months"
                           android:textSize="@dimen/twenty"
                           android:layout_centerHorizontal="true"
                           android:textColor="#1AD313"/>
                       <TextView
                           android:id="@+id/nextMonthsTv"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="30"
                           android:layout_below="@+id/nextMonthsTvInfo"
                           android:textSize="@dimen/twenty"
                           android:layout_centerHorizontal="true"
                           android:textColor="#FFF"/>
                   </RelativeLayout>

                   <RelativeLayout
                       android:id="@+id/nextDaysRl"
                       android:layout_width="0dp"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintStart_toEndOf="@+id/nextMonthsRl"
                       app:layout_constraintEnd_toEndOf="parent"
                       android:layout_height="wrap_content">
                       <TextView
                           android:id="@+id/nextDaysTvInfo"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Days"
                           android:layout_centerHorizontal="true"
                           android:textSize="@dimen/twenty"
                           android:textColor="#1AD313"/>
                       <TextView
                           android:id="@+id/nextDayTv"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="30"
                           android:layout_centerHorizontal="true"
                           android:layout_below="@+id/nextDaysTvInfo"
                           android:textSize="@dimen/twenty"
                           android:textColor="#FFF"/>
                   </RelativeLayout>
               </androidx.constraintlayout.widget.ConstraintLayout>
           </RelativeLayout>
       </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>